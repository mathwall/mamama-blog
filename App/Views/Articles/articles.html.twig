            <img class="card-img-top" src={{ '"' ~ article.path_image ~ '"' }} alt="">
            <div class="card-body">
              <h2 class="card-title">{{ article.title }}</h2>
              <p class="card-text">{{ article.content }}</p>
              <a href={{ '"/article/' ~ article.id ~ '"' }} class="btn btn-primary">Read More &rarr;</a>
            </div>
            <div class="card-footer text-muted">
              Posted on {{ article.created_date }}, 2017 by {{ article.author }}
              <button id="comments">{{ article.nb_comments}}</button>
            </div>
          </div>
          {% endfor %}

