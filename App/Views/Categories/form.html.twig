<div class="container">
    <div class="row justify-content-sm-center">
        <form class="col-sm-12 col-md-6" method="POST" action="">

            <div class="form-group mt-5">
                <label for="name">Name</label>
                <input required type="text" class="form-control" id="name" placeholder="Category Name" name="name" value="{{ currentCategory.name }}">
            </div>


            <div class="form-group">
                <label for="parent_id">Name</label>
                <select name="parent_id" id="parent_id" class="form-control">
                    <option value="0">NULL</option>
                    {% for category in categories %}
                        {% if currentCategory.id != category.id %}
                        <option
                                {% if currentCategory.parent_id == category.id %} selected {% endif %}
                                value="{{ category.id }}">
                            {% if category.prefix > 0 %}
                                {% for i in range(0, category.prefix - 1) %}
                                    -&nbsp;
                                {% endfor %}
                            {% endif %}
                            {{ category.name }}
                        </option>
                        {% endif %}
                    {% endfor %}
                </select>
            </div>

            {% if msg.alert %}
                <div class="alert alert-danger" role="alert">
                    {{ msg.alert }}
                </div>
            {% endif %}
            {% if msg.success %}
                <div class="alert alert-success" role="alert">
                    {{ msg.success }}
                </div>
            {% endif %}

            <button type="submit" class="btn btn-primary btn-block mt-3">Register</button>
        </form>
    </div>
</div>
