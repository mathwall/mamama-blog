<div class="panel panel-default">
    <div class="w-100">
        <div>
            <div class="clearfix"></div>
            <div class="panel-heading">
                Users
            </div>
            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                        <tr>
                            <th>id</th>
                            <th>username</th>
                            <th>email</th>
                            <th>picture</th>
                            <th>Group</th>
                            <th>status</th>
                            <th>manage</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for user in users %}
                            <tr>
                                <td>{{user.id}}</td>
                                <td>{{user.username}}</td>
                                <td>{{user.email}}</td>
                                <td>
                                    <img src="{{ user.path_avatar }}" alt="" height="100">
                                </td>
                                <td>{{user.user_group}}</td>
                                <td>{% if user.status == "1" %}OK{% else %}BAN{% endif %}</td>
                                <td><a href={{'/users/edit/' ~ user.id}}><button type="button"><i class="material-icons prefix">edit</i></button></a></td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
